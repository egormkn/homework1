<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/buttonPressedBackground" />
            <corners android:radius="@dimen/buttons_border_radius" />
            <stroke android:width="@dimen/buttons_border_size" android:color="@color/buttonPressedBorder" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/buttonPressedBackground" />
            <corners android:radius="@dimen/buttons_border_radius" />
            <stroke android:width="@dimen/buttons_border_size" android:color="@color/buttonPressedBorder" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/buttonBackground" />
            <corners android:radius="@dimen/buttons_border_radius" />
            <stroke android:width="@dimen/buttons_border_size" android:color="@color/buttonBorder" />

        </shape>
    </item>
</selector>